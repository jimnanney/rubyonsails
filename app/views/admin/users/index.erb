<div class="border-radius border">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Name</th>
        <th>Created</th>
        <th>Updated</th>
        <th><!-- Empty --></th>
      </tr>
    </thead>
    <tbody>
      <% @accounts.each do |a| %>
        <tr>
          <td><%= a.name %></td>
          <td><%= distance_of_time_in_words(Time.now, a.created_at) %> ago</td>
          <td><%= distance_of_time_in_words(Time.now, a.updated_at) %> ago</td>
          <td><%= link_to "Delete", :action => :delete, :id => a.id %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
